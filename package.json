{
  "name": "chatdio",
  "version": "1.0.0",
  "type": "module",
  "description": "Web audio library for conversational AI with mic input, device management, WebSocket streaming, and real-time visualization",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "typecheck": "tsc --noEmit",
    "example": "node example/server.js"
  },
  "keywords": [
    "web-audio",
    "microphone",
    "conversational-ai",
    "websocket",
    "audio-streaming",
    "echo-cancellation"
  ],
  "license": "MIT",
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.6",
    "@hono/node-ws": "^1.2.0",
    "hono": "^4.10.6"
  },
  "files": [
    "dist"
  ]
}